@model CreateSaleViewModel

<h1>Create new Sale</h1>

<hr />

<div class="row">
	<div class="col-6">
		<div class="card">
			<div class="card-header">
				<h5>Create a new Sale</h5>
			</div>
			<div class="card-body">
				<form asp-controller="Sale" asp-action="CreateSale" method="post">

					<div class="mb-3">
						<label class="form-label">Sale</label>
						<label class="form-label">Select Candy</label>
						@Html.ListBoxFor(m => m.SelectedCandy, new MultiSelectList(ViewBag.AllCandy, "CandyID", "Name"))
						<label class="form-label">Discount Percentage</label>
						<input asp-for="@Model.Discount" type="number" min="1" max="100" step="1" class="form-control" required="required" />
						<label class="form-label">Sale Start</label>
						<input asp-for="@Model.StartDate" type="date" class="form-control" required="required" />
						<label class="form-label">Sale End</label>
						<input asp-for="@Model.EndDate" type="date" class="form-control" required="required" />
					</div>
					<div class="mb-3">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
				<div class="card-footer"></div>
			</div>
		</div>
	</div>
</div>
