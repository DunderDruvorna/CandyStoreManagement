@model CandyStore.ViewModels.CandyListViewModel

<h1>Create new Sale</h1>

<hr />

<div class="row">
	<div class="col-6">
		<div class="card">
			<div class="card-header">
				<h5>Create a new Sale</h5>
				<label id="CategoryCheckBox">Category</label>
				<input type="checkbox" id="CategoryCheckBox" />
				<label id="CategoryCheckBox">Single Candy</label>
				<input type="checkbox" id="CategoryCheckBox" />

			</div>
			<div class="card-body">
				<form asp-controller="Sale" asp-action="CreateCandy" method="post">

					<div class="mb-3">
						<label class="form-label">Sale</label>
						<label class="form-label">Choose a Candy for Sale</label>
						<select asp-for="SaleCandy.CandyID" class="form-control">
							@foreach (var candy in Model.Candy)
							{
								<option value="@candy.CandyID">@candy.Name</option>
							}
						</select>
						<label class="form-label">SalePrice</label>
						<input asp-for=@Model.SaleCandy.SalePrice type="number" class="form-control" required="required" />
						<label class="form-label">Sale Start</label>
						<input asp-for=@Model.SaleCandy.SaleStart type="datetime" class="form-control" required="required" />
						<label class="form-label">Sale end</label>
						<input asp-for=@Model.SaleCandy.SaleEnd type="datetime" class="form-control" required="required" />
					</div>
					<div class="mb-3">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
				<div class="card-footer"></div>
			</div>
		</div>
	</div>
</div>
